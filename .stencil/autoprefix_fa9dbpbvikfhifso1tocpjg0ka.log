refuge-detail {
  display: grid;
  grid-template-columns: 48px auto 120px;
  grid-template-rows: auto auto;
  position: absolute;
  bottom: 0;
  height: 0px;
  width: 100%;
  height: 40vh;
  overflow-y: scroll;
  z-index: 999;
  background: var(--white);
  -webkit-transition: height 0.25s;
  transition: height 0.25s;
  -webkit-box-shadow: 0 0 15px rgba(0, 0, 0, 0.16);
  box-shadow: 0 0 15px rgba(0, 0, 0, 0.16);
  border-top: 1px solid var(--med-grey);
  border-radius: 12px 12px 0 0px;
}

.result-name {
  display: block;
  padding: 0;
  margin: 0;
}

.result-address {
  display: block;
  padding: 0;
  margin: 0;
  color: var(--dark-grey);
}

.marker {
  height: 24px;
  width: 18px;
}

.left {
  grid-column: 1;
  text-align: center;
}

.center {
  grid-column: 2;
  text-align: left;
  padding-right: 16px;
  padding: 20px 16px 20px 0;
  border-bottom: 1px solid var(--light-grey);
}

.right {
  grid-column: 3;
}