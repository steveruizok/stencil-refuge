refuge-detail {
  display: grid;
  grid-template-columns: 48px auto 120px;
  position: absolute;
  bottom: 0;
  height: 0px;
  width: 100%;
  height: 40vh;
  overflow-y: scroll;
  z-index: 999;
  background: var(--white);
  -webkit-transition: height 0.25s;
  transition: height 0.25s;
}

.open {
  -webkit-transition: height 0.25s;
  transition: height 0.25s;
  background: var(--white);
  border-bottom: 1px solid var(--light-grey);
  -webkit-box-shadow: var(--shadow);
  box-shadow: var(--shadow);
}